<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/current_loc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="42dp"
        android:text="Current Location"
        android:lineSpacingExtra="17sp"
        />

    <TextView
        android:id="@+id/find_your_c"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_alignParentTop="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Find Your College"
        app:layout_constraintTop_toBottomOf="@id/current_loc"
        app:layout_constraintLeft_toLeftOf="parent"
        android:lineSpacingExtra="1sp"
        />

    <TextView
        android:id="@+id/top_college"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="2dp"
        android:layout_alignParentTop="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="217dp"
        android:text="Top Colleges Near You"
        android:lineSpacingExtra="16sp"
        android:translationY="-8sp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/top_college_rv"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        app:layout_constraintTop_toBottomOf="@id/top_college"
        app:layout_constraintBottom_toTopOf="@id/top_nit"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/top_nit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="2dp"
        android:layout_alignParentTop="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="397dp"
        android:text="Top NITs"
        android:lineSpacingExtra="16sp"
        android:translationY="-8sp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/top_nit_rv"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        app:layout_constraintTop_toBottomOf="@id/top_nit"
        app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>