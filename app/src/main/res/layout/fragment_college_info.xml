<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".CollegeInfoFragment">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|snap|exitUntilCollapsed">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/download"
                    app:layout_collapseMode="parallax" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:background="@drawable/college_info_bg">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <View
                    android:id="@+id/divider"
                    android:layout_marginTop="14dp"
                    android:layout_width="100dp"
                    android:layout_height="3dp"
                    app:layout_goneMarginTop="12dp"
                    android:visibility="visible"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider"
                    android:layout_marginTop="26dp"
                    android:id="@+id/city_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="city_state"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:lineSpacingExtra="26sp"
                    android:gravity="center_horizontal|top"
                    />

                <TextView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/city_state"
                    android:layout_marginTop="10dp"
                    android:id="@+id/college_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="S.P.I.T"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center_horizontal|top"
                    />

                <Button
                    android:id="@+id/view_site_btn"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/college_name"
                    android:layout_marginTop="12dp"
                    android:text="View Site"
                    android:background="@drawable/button_bg"
                    android:backgroundTint="@color/green"
                    android:textAllCaps="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/view_site_btn"
                    android:layout_marginTop="22dp"
                    android:id="@+id/college_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="16dp"
                    android:paddingStart="16dp"
                    android:textColor="@color/black"
                    android:text="Sardar Patel Institute of Technology is an autonomous un-aided Research and Engineering Institute affiliated with the University of Mumbai"
                    android:gravity="center_horizontal|top"
                    />

                <TextView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/college_hostel"
                    app:layout_constraintTop_toBottomOf="@id/college_info"
                    android:layout_marginTop="28dp"
                    android:id="@+id/college_nirf"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="243"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="26sp"
                    android:gravity="center_horizontal|top"
                    />

                <TextView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/college_info"
                    android:layout_marginTop="28dp"
                    android:id="@+id/college_hostel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="26sp"
                    android:gravity="center_horizontal|top"
                    />

                <TextView
                    app:layout_constraintStart_toEndOf="@id/college_hostel"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/college_info"
                    android:layout_marginTop="28dp"
                    android:id="@+id/college_seats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="240"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="26sp"
                    android:gravity="center_horizontal|top"
                    />

                <TextView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/college_hostel"
                    android:layout_marginTop="22dp"
                    android:id="@+id/college_fees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="170000"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="26sp"
                    android:gravity="center_horizontal|top"
                    />

                <View
                    android:id="@+id/divider2"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toBottomOf="@id/college_fees"
                    android:layout_height="3dp"
                    app:layout_goneMarginTop="12dp"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider2"
                    android:layout_marginTop="14dp"
                    android:id="@+id/college_cutoff_ranks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cutoff Ranks"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="26sp"
                    android:gravity="center_horizontal|top"
                    />

                <TextView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/college_cutoff_ranks"
                    android:layout_marginTop="10dp"
                    android:id="@+id/college_cutoff_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="branch"
                    android:textSize="16sp"
                    android:lineSpacingExtra="26sp"
                    android:gravity="center_horizontal|top"
                    />

                <TextView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/college_cutoff_details"
                    android:id="@+id/college_cutoff_ce"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Computer Engineering"
                    android:lineSpacingExtra="26sp"
                    android:gravity="center_horizontal|top"
                    />



                <TextView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/college_cutoff_ce"
                    android:id="@+id/college_cutoff_it"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Information Technology"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:lineSpacingExtra="26sp"
                    android:gravity="center_horizontal|top"
                    />

                <TextView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/college_cutoff_it"
                    android:id="@+id/college_cutoff_ee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Electronics Engineering"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:lineSpacingExtra="26sp"
                    android:gravity="center_horizontal|top"
                    />

                <TextView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/college_cutoff_ee"
                    android:id="@+id/college_cutoff_elec"
                    android:layout_width="wrap_content"
                    android:layout_height="46dp"
                    android:text="Electrical Engineering"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:lineSpacingExtra="26sp"
                    android:gravity="center_horizontal|top"
                    />

                <TextView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/college_cutoff_elec"
                    android:id="@+id/college_cutoff_placement_stats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="city_state"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="26sp"
                    android:gravity="center_horizontal|top"
                    />

                <TextView
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/college_avg_placement_percentage"
                    app:layout_constraintTop_toBottomOf="@id/college_cutoff_placement_stats"
                    android:layout_marginTop="28dp"
                    android:id="@+id/college_avg_placement_salary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="243"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="26sp"
                    android:gravity="center_horizontal|top"
                    />

                <TextView
                    app:layout_constraintStart_toEndOf="@id/college_avg_placement_salary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/college_cutoff_placement_stats"
                    android:layout_marginTop="28dp"
                    android:id="@+id/college_avg_placement_percentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="243"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="26sp"
                    android:gravity="center_horizontal|top"
                    />




            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- TODO: Update blank fragment layout -->

</FrameLayout>